{
  "name": "transcript-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",

  "build": {
    "appId": "com.lifehelper.app",
    "productName": "LifeHelper",
    "files": [
      "dist/**",
      "electron/**",
      "!electron/main.js",
      "!electron/preload.js",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis", 
      "icon": "electron/icon.ico"
    }
  },

  "scripts": {
    "dev": "vite",
    "build": "vite build",

    "build:ui": "vite build",        
    "electron": "electron .",

    "dist": "npm run build:ui && electron-builder", 
    "start": "npm run build && npm run electron",

    "lint": "eslint .",
    "preview": "vite preview"
  },

  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",  
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.2"
  }
}
